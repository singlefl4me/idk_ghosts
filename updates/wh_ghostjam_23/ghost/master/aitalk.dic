//--Chain Functions

OnChainInt
{
	if !ISVAR("temptalkinterval")
		StoreInterval

	aitalkinterval = reference0
}

OnChainReset
{
	StoreInterval
	RemoveFlag("scene in progress")
	RemoveFlag("scene_a")
	AddFlag("scene_a complete")
	--
	"\w8\w8\-"
}


//--OnSpookTime

OnSpookTime
{
	_spooktime

	if Flag("scene in progress") == 1	{
		lastTalk = spook_scenario
	}

	if ghostupmin >= 60 && ghostupmin < 120	{
		_spooktime = RAND(6)
		if _spooktime == 0	
			lastTalk = spookTalk
		else
			lastTalk = RandomTalk
	}
	elseif ghostupmin >= 120 && ghostupmin < 180	{
		if spookchance == 1	{
			_spooktime = RAND(4)
			if _spooktime == 0	
				lastTalk = spookTalk
			else
				lastTalk = RandomTalk
		}
		elseif spookchance != 1
			lastTalk = RandomTalk
	}
	elseif ghostupmin >= 180	{
		if spookchance == 1	{
			_spooktime = RAND(3)
			if _spooktime == 0	
				lastTalk = spookTalk
			else
				lastTalk = RandomTalk
		}
		elseif spookchance != 1
			lastTalk = RandomTalk
	}
	else
		lastTalk = RandomTalk
}

OnSpookTimeEx
{
	_spooktime


	if Flag("scene in progress") == 1	{
		spookcount++
		
		if spookcount >= 4
			lastTalk = ".\w8.\w8.\w8\![raise,OnChainInt,180]\e:chain=scenario_a"
		
		else
			lastTalk = spook_scenario
	}

	elseif ghostupmin > 10 && Flag("scene in progress") == 0	{
		if ghostupmin < 60 	{
			_spooktime = RAND(6)

			if _spooktime == 0	{
				RemoveFlag("spookscene on")
				AddFlag("scene in progress")
				lastTalk = spook_scenario
			}
			else
				lastTalk = RandomTalk
		}
		elseif ghostupmin >= 60	{
			RemoveFlag("spookscene on")
			AddFlag("scene in progress")
			lastTalk = spook_scenario
		}
	}
	else
		lastTalk = RandomTalk
}


//-OnMinuteChange

HourCheck
{
if passmin >= 59
	{
		passmin = 0
		passhour = passhour + 1
		
		spookchance = RAND(2)
	}
}


OnMinuteChange
{
	HourCheck //checks to see if an hour has passed, ignore it
}


//--OnSecondChange

OnSecondChange
{
	if passsec == 59
 		{
	 	passsec = 0
 		passmin = passmin + 1
		}
 	else
 		{
	 	passsec = passsec + 1
		}
}

