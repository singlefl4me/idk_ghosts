//--OnAiTalk

OnAiTalk
{
	if CHAIN.IDName == "" {
		if Flag("spookscene on") == 1 || Flag("scene in progress") == 1
			OnSpookTimeEx
		elseif spookmode == "on"
			OnSpookTime
		else
			lastTalk = RandomTalk
	}
	else
		lastTalk = ChainTalk

	lastTalk
}


